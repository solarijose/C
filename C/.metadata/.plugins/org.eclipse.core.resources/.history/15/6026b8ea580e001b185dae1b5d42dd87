#include <stdio.h>
#include <stdlib.h>

int main(void) {

	//declaracion de variables
	int integer1, integer2, sum;

	printf("Entrada primer variable\n"); 	//Imprimir
	scanf("%d", &integer1);					//leer una variable
	printf("Entrada segunda varible\n");	//Imprimir
	scanf("%d", &integer2);					//leer una variable
	sum= integer1+integer2;					// sum es = variable 1+variable2
	printf("Suma es %d\n", sum);
	//printf("La suma es %d\n", integer1 + integer2) Segunda forma de sumar m√°s simple y menos lineas;


	return EXIT_SUCCESS; //indica el fin del progama
}
